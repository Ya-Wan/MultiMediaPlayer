<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/browse_item_rl_w"
    android:layout_height="@dimen/browse_item_rl_h"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" 
    android:id="@+id/item_layout"
    android:background="@android:color/transparent"
    >

    <ImageView
        android:layout_marginTop="@dimen/browse_item_padding_top"
        android:id="@+id/icon"
        android:layout_width="@dimen/browse_item_icon_w_w"
        android:layout_height="@dimen/browse_item_icon_w_h"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/icon"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/browse_item_title_font_size" />


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240px"
    android:background="#D8000000">

    <TextView
        android:id="@+id/photo_format_show_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100px"
        android:text="Format:" />

    <TextView
        android:id="@+id/photo_format_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/photo_format_show_text_view"
        android:layout_toRightOf="@id/photo_format_show_text_view"
        android:text="PNG" />

    <TextView
        android:id="@+id/photo_title_show_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/photo_format_show_text_view"
        android:layout_alignLeft="@id/photo_format_show_text_view"
        android:layout_marginBottom="40px"
        android:text="Title:" />

    <TextView
        android:id="@+id/photo_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/photo_title_show_text_view"
        android:layout_toRightOf="@id/photo_title_show_text_view"
        android:text="photo name" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/photo_resolution_show_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="resolution:" />

        <TextView
            android:id="@+id/photo_resolution_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1920 * 1080" />

    </LinearLayout>

    <ImageView
        android:id="@+id/photo_zoom_out_image_view"
        android:layout_width="136px"
        android:layout_height="60px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40px"
        android:layout_marginRight="80px"
        android:background="@drawable/board_normal_selector"
        android:src="@drawable/zoom_out_icon"
        android:scaleType="center"/>

    <ImageView
        android:id="@+id/photo_zoom_in_image_view"
        android:layout_width="136px"
        android:layout_height="60px"
        android:layout_alignTop="@id/photo_zoom_out_image_view"
        android:layout_marginRight="20px"
        android:layout_toLeftOf="@id/photo_zoom_out_image_view"
        android:background="@drawable/board_normal_selector"
        android:src="@drawable/zoom_in_icon"
        android:scaleType="center"/>

    <ImageView
        android:id="@+id/photo_rorate_image_view"
        android:layout_width="136px"
        android:layout_height="60px"
        android:layout_alignTop="@id/photo_zoom_in_image_view"
        android:layout_marginRight="20px"
        android:layout_toLeftOf="@id/photo_zoom_in_image_view"
        android:background="@drawable/board_normal_selector"
        android:src="@drawable/rorate_icon"
        android:scaleType="center"/>

</RelativeLayout>
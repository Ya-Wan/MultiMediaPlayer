<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:background="@drawable/mm_bg" 
	android:paddingTop="22dp"
	android:paddingBottom="3.4dp" 
	android:paddingLeft="10dp"
	android:paddingRight="10dp">
	<TableLayout android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TableRow android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_marginRight="10dp"
				android:text="@string/mmp_user_name" 
				android:textSize="@dimen/mmp_login_txt_size" />
			<EditText android:id="@+id/mmp_user_name"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_weight="1.0" 
				android:singleLine="true"
				android:editable="false" 
				android:textSize="@dimen/mmp_menu_dialog_text_size"
				/>
		</TableRow>
		<TableRow android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_marginRight="10dp"
				android:text="@string/mmp_password" 
				android:textSize="@dimen/mmp_login_txt_size" />
			<EditText android:id="@+id/mmp_password"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:editable="false" 
				android:layout_weight="1.0" 
				android:password="true" 
				android:textSize="@dimen/mmp_menu_dialog_text_size"/>
		</TableRow>
	</TableLayout>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true" 
		android:padding="5dp">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="@color/white"
			android:textSize="@dimen/mmp_error_size"
			android:text="@string/mmp_confirm" 
			android:drawablePadding="5dp"
			android:drawableLeft="@drawable/tk_cm_key_enter"
			android:layout_marginRight="5dp"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="@color/white"
			android:textSize="@dimen/mmp_error_size"
			android:text="@string/mmp_vkb" 
			android:drawablePadding="5dp"
			android:drawableLeft="@drawable/tk_cm_key_right">
		</TextView>
	</LinearLayout>
</RelativeLayout>

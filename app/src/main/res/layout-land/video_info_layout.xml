<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240px"
    android:background="#D8000000">

    <TextView
        android:id="@+id/video_format_show_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:layout_centerVertical="true"
        android:text="@string/video_info_dialog_format" />

    <TextView
        android:id="@+id/video_format_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/video_format_show_text_view"
        android:layout_toRightOf="@id/video_format_show_text_view"
        android:text="PNG" />

    <TextView
        android:id="@+id/video_title_show_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/video_format_show_text_view"
        android:layout_above="@id/video_format_show_text_view"
        android:layout_marginBottom="40px"
        android:text="@string/mmp_info_title"/>

    <TextView
        android:id="@+id/video_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/video_title_show_text_view"
        android:layout_toRightOf="@id/video_title_show_text_view"
        android:text="photo name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_resolution_show_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_info_dialog_resolution" />

        <TextView
            android:id="@+id/video_resolution_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1920 * 1080" />

    </LinearLayout>

    <TextView
        android:id="@+id/video_subtitle_current_status_tv"
        android:layout_width="136px"
        android:layout_height="60px"
        android:layout_alignStart="@+id/video_subtitle_text_view"
        android:layout_above="@+id/video_subtitle_text_view"
        android:layout_marginBottom="10px"
        android:gravity="center"
        android:focusable="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/white"
        android:text="@string/menu_video_mjc_demo_off" />

    <TextView
        android:id="@+id/video_subtitle_text_view"
        android:layout_width="136px"
        android:layout_height="60px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40px"
        android:layout_marginRight="80px"
        android:background="@drawable/board_normal_selector"
        android:gravity="center"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/white"
        android:text="@string/video_info_dialog_subtitle" />

    <TextView
        android:id="@+id/video_audio_current_status_tv"
        android:layout_width="136px"
        android:layout_height="60px"
        android:layout_alignStart="@+id/video_audio_text_view"
        android:layout_above="@+id/video_audio_text_view"
        android:layout_marginBottom="10px"
        android:gravity="center"
        android:text="@string/video_info_dialog_subtitle" />

    <TextView
        android:id="@+id/video_audio_text_view"
        android:layout_width="136px"
        android:layout_height="60px"
        android:layout_alignTop="@id/video_subtitle_text_view"
        android:layout_marginRight="20px"
        android:layout_toLeftOf="@id/video_subtitle_text_view"
        android:background="@drawable/board_normal_selector"
        android:gravity="center"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/white"
        android:text="@string/mmp_audio" />


</RelativeLayout>
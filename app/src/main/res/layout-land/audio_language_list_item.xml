<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audio_lang_linear"
    android:layout_width="500px"
    android:layout_height="85px"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/audio_select_icon"
        android:layout_width="60px"
        android:layout_height="30px"
        android:gravity="center"
        android:src="@drawable/audio_select_icon"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/audio_lang_name"
        android:layout_width="220px"
        android:layout_height="85px"
        android:layout_marginLeft="20px"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left|center_vertical"
        android:text="UnKnow"
        android:textColor="@color/white"
        android:textSize="26px"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/audio_dolby_icon"
        android:layout_width="60px"
        android:layout_height="30px"
        android:layout_marginRight="30px"
        android:gravity="center"
        android:src="@drawable/audio_dolby_icon"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/audio_iv_icon"
        android:layout_width="60px"
        android:layout_height="35px"
        android:layout_marginRight="30px"
        android:gravity="center"
        android:src="@drawable/mmp_toolbar_typeicon_music"
        android:visibility="invisible" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/grid_item_imgwidth"
    android:layout_height="@dimen/grid_item_layout_height"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.mediatek.wwtv.mediaplayer.mmp.commonview.RoundCornerImageView
        android:id="@+id/img_preview"
        android:layout_width="@dimen/grid_item_imgwidth"
        android:layout_height="@dimen/grid_item_imgheight"
        android:layout_gravity="center" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="@dimen/grid_item_imgwidth"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/translucent_background"
            android:singleLine="true"
            android:textColor="@color/row_item_text"
            android:visibility="invisible"
            android:textSize="@dimen/row_item_text_title" />
</LinearLayout>